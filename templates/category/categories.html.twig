{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block main %}

    {% for message in app.flashes('success') %}
        <p>{{ message }}</p>
    {% endfor %}

    <h1>Categories Page âœ…</h1>
    <a href="{{ path('app_category_new') }}" class="btn btn-primary">Create New</a>
    <div class="d-flex flex-wrap">
        {% for category in categories %}
            <div class="card m-2" style="width: 18rem;">
                <img src="https://via.placeholder.com/200x150.png/0055AA/010101?text=Image {{ category.name }}"
                     class="card-img-top"
                     alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ category.name }}</h5>
                    <a href="{{ path('app_category_details', {'id' : category.id}) }}"
                       class="btn btn-primary mt-auto">Details</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
